{{>header}}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form action="/project/new" method="post">
                <div class="form-group">
                    <label for="exampleInput">Job Title</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" name="name" placeholder="">
                </div>
                <div class="form-group">
                    <label for="exampleInput">Description</label>
                    <textarea name="notes" id="" class="form-control" rows="5" placeholder="Brief description of your duties"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleSelect1">Year Started</label>
                    <select class="form-control" id="exampleSelect1" name="yearStarted">
                    <option>2009</option>
                    <option>2010</option>
                    <option>2011</option>
                    <option>2012</option>
                    <option>2013</option>
                    <option>2014</option>
                    <option>2015</option>
                    <option>2016</option>
                    <option>2017</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleSelect1">Year Ended</label>
                    <select class="form-control" id="exampleSelect1" name="yearEnded">
                    <option>2012</option>
                    <option>2013</option>
                    <option>2014</option>
                    <option>2015</option>
                    <option>2016</option>
                    <option>2017</option>
                    <option>Current</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>