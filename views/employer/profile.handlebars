{{>header}}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Personal Info</h3>
                </div>
                <div class="panel-body text-left">
                    <strong>Company Name:</strong> <p>{{ employer.name }}</p>
                    <strong>Email:</strong> <p>{{ employer.email }}</p>
                    <strong>City:</strong> <p>{{ employer.city }}</p>
                    <strong>State:</strong> <p>{{ employer.state }}</p>
                    {{!--<form action="#" method="post">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>--}}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Your Jobs</h3> 
                </div>
                <div class="panel-body text-left">
                    {{#each jobs}}
                        <hr>   
                        <strong>Title:</strong> <p>{{ this.title }}</p>
                        <strong>Description:</strong> <p>{{ this.notes }}</p>
                        
                        <form action="/employer/applicants/{{this.id}}" method="get">
                            <button type="submit" class="btn btn-primary">View Applicants</button>
                        </form>
                        <form action="/employer/applicants/{{this.id}}" method="get" style="margin-top: 10px;">
                            <button type="submit" class="btn btn-primary">Remove Job</button>
                        </form>
                    {{/each}}
                </div>
            </div>
            <form action="/job/new" method="get">
                <button type="submit" class="btn btn-primary">Add Job</button>
            </form>
        </div>
    </div>

</div>