{{>header}}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form action="/job/filter" method="post">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" placeholder="Search by title">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Search</button>
                    </span>
                    </div><!-- /input-group -->
            </form>
        </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
            
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">All Jobs</h1>
            <hr>
            <h4>{{jobs.length}} results</h4>
            <hr>
            {{#each jobs}}
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ this.title }}</h3> 
                    </div>
                    <div class="panel-body text-left">
                            <strong></strong> <p>{{ this.notes }}</p>
                            <form action="/job/{{this.id}}/apply" method="post">
                                <button type="submit" class="btn btn-primary">Apply</button>
                            </form>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>