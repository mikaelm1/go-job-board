{{>header}}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Your info</h3>
                </div>
                <div class="panel-body text-left">
                    <strong>Name:</strong> <p>{{ user.username }}</p>
                    <strong>Email:</strong> <p>{{ user.email }}</p>
                    {{!--<form action="#" method="post">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>--}}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Your Education</h3> 
                </div>
                <div class="panel-body text-left">
                    {{#each education}}
                        <hr>   
                        <strong>School:</strong> <p>{{ this.name }}</p>
                        <strong>Year Started:</strong> <p>{{ this.yearStarted }}</p>
                        <strong>Year Graduated:</strong> <p>{{ this.yearEnded }}</p>
                        <strong>GPA:</strong> <p>{{ this.gpa }}</p>
                        {{!--<form action="/education/edit" method="get">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </form>--}}
                    {{/each}}
                </div>
            </div>
            <form action="/education/" method="get">
                <button type="submit" class="btn btn-primary">Add Education</button>
            </form>
        </div>
    </div>

    <div class="row" style="margin-top: 2%">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Projects</h3>
                </div>
                <div class="panel-body text-left">
                    <strong>School:</strong> <p>{{ user.username }}</p>
                    <strong>Year Started:</strong> <p>{{ user.email }}</p>
                    <strong>Year Graduated:</strong> <p>{{ user.email }}</p>
                    <strong>GPA:</strong> <p>{{ user.email }}</p>
                    {{!--<form action="#" method="post">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>--}}
                </div>
            </div>
            <form action="/project/new" method="get">
                <button type="submit" class="btn btn-primary">Add Project</button>
            </form>
        </div>
    </div>

</div>